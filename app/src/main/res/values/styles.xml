<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="layout">
		<item name="android:layout_margin">20dp</item>
		<item name="android:background">#B8B8B8</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="custom_edittext">
		<item name="android:background">@color/background_button</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:textColorHint">#000</item>
		<item name="android:layout_margin">8dp</item>
	</style>

	<style name="edittext_biasa" parent="custom_edittext">
		<item name="android:inputType">text</item>
	</style>

	<style name="edittext_email" parent="custom_edittext">
		<item name="android:inputType">textEmailAddress</item>
	</style>

	<style name="edittext_password" parent="custom_edittext">
		<item name="android:inputType">textPassword</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
